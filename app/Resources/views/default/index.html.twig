{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <img src="{{ asset('img/logo.jpg') }}" class="float-left logo" style="height: 96px;" alt="Logo">
        <div class="container col-5 frontpage_title">
            <h1 class="text-center front_title" >Training Centrum Den Haag</h1>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: black;">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('homepage') }}">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('aanbod') }}">Trainingsaanbod</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('register') }}">Lid worden</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('gedrag') }}">Gedragsregels</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0" action="{{ path('homepage') }}" method="post">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control mr-sm-2"  placeholder="Username" aria-label="Username">
                <input type="password" id="password" name="_password" required="required" class="form-control mr-sm-2"  placeholder="Password" aria-label="Password">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn my-2 my-sm-0" type="submit">Login</button>
            </form>
        </div>
    </nav>


        <img src="https://www.modells.com/on/demandware.static/-/Sites-Modells-Library/default/dw70306f10/CategoryLanding/Fitness-and-Activities/Boxing%20&%20MMA/cat-landing-fitness-boxing-hero-012318.jpg" class="img-fluid" alt="Responsive image" style="width:100%;">
        <div class="centered header-text">Wil je leren hoe je iemand moet uithalen?</div>
         <a class="button" href="{{ path('register') }}">Schrijf je in</a>

{% endblock %}



{% block stylesheets %}
    <style>
        html{
            background-color: black;
        }

        .front_title{
            color: red;
            text-align: center;
            vertical-align: middle;
            line-height: 90px;
        }

        .logo{
            margin: 10px;
        }

        .container-fluid{
            height:96px;
        }

        .navbar{
            position: absolute;
            width: 100%;
        }

        .header-text
        {
            color:white;
            font-size: 3.4375rem;
            text-transform: uppercase;
            font-weight: 600;
            text-shadow: 1px 1px #000;
        }

        .centered {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .button {
            position: absolute;
            top: 65%;
            left: 29%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            background-color: #ff0000;
            color: white;
            font-size: 16px;
            padding: 12px 24px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
        }

        .button:hover {
            background-color: darkred;
            text-decoration: none;
            color:white;
        }
    </style>
{% endblock %}