{% include'base.html.twig' %}
{% block head %}
    <div class="container-fluid">
        <img src="{{ asset('img/logo.jpg') }}" class="float-left logo" style="height: 96px;" alt="Logo">
        <div class="container col-md-7 col-sm-9 frontpage_title" style="background-color: white;">
            <h1 class="text-center front_title" style="background-color: white;margin:0;">Training Centrum Den Haag</h1>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: black;">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('adminHomepage') }}">Home<span class="sr-only">(current)</span></a>
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}
{% block body %}
    <h2>Admin pagina</h2>
{% endblock %}
{% block content %}
    <table class="table table-bordered table-dark">
        <thead>
        <tr>
            <th>Omschrijving</th>
            <th>Tijd</th>
            <th>Extra Kosten</th>
            <th>Wijzig</th>
            <th>Verwijder</th>
        </tr>
        </thead>
        <tbody>
        {% for training in trainingen %}
            <tr>
                <td>{{ training.description }}</td>
                <td>{{ training.duration|date('H:i') }}</td>
                <td>&euro;{{ training.extracost }}</td>
                <td></td>
                <td></td>
            </tr>
        {% endfor %}
        <tr></tr>
        </tbody>
    </table>
{% endblock %}