{% extends 'instructor/base.html.twig' %}
{% block head %}
    <div class="container-fluid">
        <img src="{{ asset('img/logo.jpg') }}" class="float-left logo" style="height: 96px;" alt="Logo">
        <div class="container col-md-7 col-sm-9 frontpage_title" style="background-color: white;">
            <h1 class="text-center front_title" style="background-color: white;margin:0;">Training Centrum Den Haag</h1>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: black;">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('userHomepage') }}">Home<span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <a href="{{ path('logout') }}"><button class="btn logout my-2 my-sm-0">Logout</button></a>
        </div>
    </nav>
{% endblock %}
{% block content %}
    <h2>Instructor pagina</h2>
    <br>
    <table class="table table-bordered table-dark">
    <thead>
    <tr>
        <th>Description</th>
        <th>Duration</th>
        <th>Extra Cost</th>
        <th>Wijzigen</th>
        <th>Verwijderen</th>
        <th><i class="fa fa-plus" aria-hidden="true" style="color:green;"></i></th>
    </tr>
    </thead>
    <tbody>
    {% for aanbod in aanbod %}
        <tr>
            <td>{{ aanbod.description }}</td>
            <td>{{ aanbod.duration|date('i') }} min</td>
            <td>â‚¬ {{ aanbod.extracost }}</td>
            <td><i class="fa fa-pencil" aria-hidden="true" style="color:yellow;"></i></td>
            <td><i class="fa fa-trash" aria-hidden="true" style="color:red;"></i></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}